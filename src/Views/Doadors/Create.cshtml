@model MedShare.Models.Doador

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar novo Doador</h1>

<h4>Doador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoadorName" class="control-label"></label>
                <input asp-for="DoadorName" class="form-control" />
                <span asp-validation-for="DoadorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorCpf" class="control-label"></label>
                <input asp-for="DoadorCpf" class="form-control" />
                <span asp-validation-for="DoadorCpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorEmail" class="control-label"></label>
                <input asp-for="DoadorEmail" class="form-control" />
                <span asp-validation-for="DoadorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorSenha" class="control-label"></label>
                <input asp-for="DoadorSenha" class="form-control" />
                <span asp-validation-for="DoadorSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorDataNascimento" class="control-label"></label>
                <input asp-for="DoadorDataNascimento" class="form-control" />
                <span asp-validation-for="DoadorDataNascimento" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-info">voltar</a>
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
