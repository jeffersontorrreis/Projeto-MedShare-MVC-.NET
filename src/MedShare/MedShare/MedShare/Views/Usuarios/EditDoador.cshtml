@model MedShare.Models.Doador

@{
    ViewData["Title"] = "Editar Doador";
}

<h2>Editar Dados do Doador</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDoador" method="post">
            <input type="hidden" asp-for="DoadorId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoadorNome" class="control-label"></label>
                <input asp-for="DoadorNome" class="form-control" />
                <span asp-validation-for="DoadorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorEmail" class="control-label"></label>
                <input asp-for="DoadorEmail" class="form-control" />
                <span asp-validation-for="DoadorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorCPF" class="control-label"></label>
                <input asp-for="DoadorCPF" class="form-control" />
                <span asp-validation-for="DoadorCPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoadorSenha" class="control-label"></label>
                <input asp-for="DoadorSenha" class="form-control" type="password" />
                <span asp-validation-for="DoadorSenha" class="text-danger"></span>
            </div>
            <div class="form-group d-flex gap-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-secondary" href="javascript:history.back()">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
